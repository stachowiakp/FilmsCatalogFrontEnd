@model TicketingFrontEnd.Models.UpdateFilmModel


<h4>UpdateFilmModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePut" asp-route-FilmID=@ViewBag.FilmID>
            <label>Film ID:</label>@ViewBag.FilmID
            <div class="form-group">
                <label asp-for="ScreeningDate" class="control-label"></label>
                <input asp-for="ScreeningDate" class="form-control" />
                <span asp-validation-for="ScreeningDate" class="text-danger"></span>
                               
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ManageFilms" asp-action="Films">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
